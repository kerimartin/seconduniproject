<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#E3DEDE"
android:backgroundTint="#ECECEC"
tools:context=".MainActivity">


    <View
        android:id="@+id/upperBar"
        android:layout_width="413dp"
        android:layout_height="124dp"
        android:background="#303030"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/mainBody"
        android:layout_width="408dp"
        android:layout_height="621dp"
        android:background="#F4F4F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upperBar" />

    <TextView
        android:id="@+id/textViewSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="139dp"
        android:layout_marginBottom="402dp"
        android:text="@string/text_view_speedometer"
        android:textColor="#393737"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.703" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-light"
        android:text="Speedometer"
        android:textColor="#DAD8D8"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/upperBar"
        app:layout_constraintEnd_toEndOf="@+id/upperBar"
        app:layout_constraintStart_toStartOf="@+id/upperBar"
        app:layout_constraintTop_toTopOf="@+id/upperBar" />

</androidx.constraintlayout.widget.ConstraintLayout>